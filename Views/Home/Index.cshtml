@model HRViabilityPortal.ViewModels.LogOnModel

@{
    //ViewBag.Title = "Index";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @*<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>*@
    <link href="~/Content/login.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="~/Content/JaizBank-logo.ico">
    <title>Login</title>
</head>
<body class="hold-transition login-page">
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @*<div class="logo">

                </div>*@
            <br />
            <br />
            <br />
            <br />
            <div class="login-block">
                <font face="Gill Sans MT" color="green"><center><p><h2><strong>HR Viability Portal</strong></h2></p></center></font>
                <div class="row">
                    <div class="col-sm-12">

                        @if (TempData["Msg"] != null)
                        {
                            <div class="alert alert-dismissable alert-success">
                                <font color="red" face="Gill Sans MT"><b>@TempData["Msg"].ToString()</b></font>
                                <br />
                            </div>
                        }
                    </div>
                </div>

                @*@Html.ValidationSummary(true, "Login was unsuccessful", new { @class = "alert alert-danger" })
                    @ViewBag.username*@
                <div class="form-group">

                    <font face="Gill Sans MT">@Html.Label("Username", new { @class = "mdl-textfield__label", @Value = "Enter Username" })</font>
                    @Html.TextBox("username", null, new { @class = "mdl-textfield__input", @type = "text", @required = "required", autocomplete = "off", @title = "Enter Username", onkeyup = "this.value = this.value.toUpperCase();" })
                    @Html.ValidationMessage("")
                </div>

                <div class="form-group">

                    <font face="Gill Sans MT">@Html.Label("Password", new { @class = "mdl-textfield__label", @Value = "Enter Password" })</font>
                    @Html.TextBox("Password", null, new { @class = "mdl-textfield__input", @type = "password", @required = "required", @title = "Password must me at least 6 characters long", @pattern = "^.{6,}$" })
                    @Html.ValidationMessage("Password")

                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" data-naqs-button="login"><i class="glyphicon glyphicon-log-in"></i>&nbsp;Login</button>
                    </div>
                </div>
            </div>
            <footer>
                <center><p>&copy; @DateTime.Now.Year - <a href="http://www.jaizbankplc.com" target="_new">Jaiz Bank Plc</a></p></center>
            </footer>
        }
    </div>
</body>
</html>
