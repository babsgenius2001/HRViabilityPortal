@model HRViabilityPortal.ViewModels.RequestStatusViewModel
@using PagedList.Mvc;

@{
    ViewBag.Title = "View Requests Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ViewStatus", "RequestStatus", FormMethod.Post))

{
    <!-- BEGIN HIDDEN FIELDS AREA -->
    @Html.HiddenFor(m => m.EventCommand)
    @Html.HiddenFor(m => m.Mode)
    @Html.HiddenFor(m => m.EventArgument)
    <!-- END HIDDEN FIELDS AREA -->
    <!--start Loading panel-->
    <div id="loading" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class=" modal-title">Loading... </h4>
                </div>
                <div class=" modal-body">
                    <div class=" progress progress-striped active">
                        <div class="progress-bar" style="width:100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--start Loading panel-->
    <div class="content-wrapper">
        <section class="content">
            <!-- ** BEGIN MESSAGE AREA -->
            <div class="row">
                <div class="col-xs-12">
                   
                    @if (TempData["Msg"] != null)
                    {
                        <div class="alert alert-dismissable alert-success">
                            <button type="button" class="close" data-dismiss="alert">
                                x
                            </button>
                            @TempData["Msg"].ToString()
                        </div>
                    }
                </div>
            </div>

            <!-- ** END MESSAGE AREA -->
            <!-- add new comment to index file -->          

            @if (Model.IsHistoricalListAreaVisible)
            {
                <br/>
                <br/>

                <h4><span style="color: whitesmoke">Request Status Details</span></h4>
                <!-- BEGIN GRID AREA -->
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="viewHistory" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Reference Number</th>
                                        <th>Staff Id</th>
                                        <th>Account Number</th>
                                        <th>Account Name</th>
                                        <th>Facility Name</th>
                                        <th>Branch</th>
                                        <th>Department</th>                                      
                                        <th>Amount Requested</th>                                       
                                        <th>Request Date</th>
                                        <th>Request Status</th>
                                        <th>Reason For Rejection (If Request Is Rejected)</th>
                                        <th>Branch Manager To Approve (If At BM Stage)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.FacilityReqs)
                                    {
                                    <tr>
                                        <td><b><span style="color: goldenrod">@item.requestReferenceNumber</span></b></td>
                                        <td>@item.staffId</td>
                                        <td>@item.accountNumber</td>
                                        <td>@item.accountName</td>
                                        <td>@item.facilityName</td>
                                        <td>@item.branch</td>
                                        <td>@item.department</td>
                                        <td><b><span style="color: mediumblue">@String.Format("{0:n}", Convert.ToDecimal(item.amountRequested))</span></b></td>
                                        <td>@item.requestDate</td>

                                        @if (@item.requestStatus == "Request_Rejected")
                                        {
                                            <td><b><span style="color: red">@Model.GetRequestStatusDetails(@item.requestStatus)</span></b></td>
                                        }
                                        else
                                        {
                                            <td><b><span style="color: darkgreen">@Model.GetRequestStatusDetails(@item.requestStatus)</span></b></td>
                                        }


                                        @if (@item.requestStatus == "Request_Rejected")
                                        {
                                            <td><b><span style="color: red">@Model.GetRejectionReason(@item.requestReferenceNumber)</span></b></td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }

                                        @if (@item.requestStatus == "Awaiting_BM_Approval")
                                        {
                                            <td>@Model.GetBMDetails(@item.branchCode)</td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            @if (Model.PagedList != null)
                            {
                                @Html.PagedListPager(Model.PagedList, page => Url.Action("Index",
                    new { page }))
                            }
                        </div>
                        <!-- END GRID AREA -->
                    </div>
                </div>
                <br />
                <br />

            }
           
        </section>
    </div>

}

