@model HRViabilityPortal.ViewModels.AdminViewModel
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper"
     style="background-image:url('../Content2/assets/images/restaurant.png');background-repeat: no-repeat;background-size: cover;">
    <section class="content">
        @using (Html.BeginForm("index", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }@*, new { @class = "form-inline", role = "form" }*@))
{
<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <!-- BEGIN PAGE BAR -->
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4>Dashboard</h4>
        </div>
    </div>

    <div class="wrapper wrapper-content">
        <!-- BEGIN DASHBOARD STATS 1-->
        @if (Model.IsAllData)
        {
        <div class="row">
            @Html.HiddenFor(model => model.TotalNoOfRequest)
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-success pull-right">All Requests</span>

                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@Html.DisplayFor(m => m.TotalNoOfRequest, "", new { @class = "col-md-4 control-label" })</h1>
                        <div class="stat-percent font-bold text-success">@Html.DisplayFor(m => m.TotalNoOfRequest, "", new { @class = "col-md-4 control-label" })<i class="fa fa-level-up"></i></div>
                        <small>Total Number Of Requests</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-success pull-right">Staff Branch Requests</span>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@Html.DisplayFor(m => m.BranchRequests, "", new { @class = "col-md-4 control-label" })</h1>
                        <div class="stat-percent font-bold text-success">@Html.DisplayFor(m => m.BranchRequests, "", new { @class = "col-md-4 control-label" })<i class="fa fa-level-up"></i></div>
                        <small>Total Number Of Requests In My Branch</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-info pull-right">Approved Requests</span>

                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@Html.DisplayFor(m => m.ApprovedRequests, "", new { @class = "col-md-4 control-label" })</h1>
                        <div class="stat-percent font-bold text-info">@Html.DisplayFor(m => m.ApprovedRequests, "", new { @class = "col-md-4 control-label" })<i class="fa fa-bolt"></i></div>
                        <small>Total Number Of Approved Requests</small>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-danger pull-right">Rejected Requests</span>

                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@Html.DisplayFor(m => m.RejectedRequests, "", new { @class = "col-md-4 control-label" })</h1>
                        <div class="stat-percent font-bold text-danger">@Html.DisplayFor(m => m.RejectedRequests, "", new { @class = "col-md-4 control-label" })<i class="fa fa-fire"></i></div>
                        <small>Number Of Rejected Requests</small>
                    </div>
                </div>
            </div>

        </div>
        }
    </div>
    <hr />
    <hr />

