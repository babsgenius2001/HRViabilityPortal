@model HRViabilityPortal.ViewModels.AuditTrailViewModel
@using PagedList.Mvc;

@{
    ViewBag.Title = "View Audit Logs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ViewLogs", "AuditTrail", FormMethod.Post))

{
    <!-- BEGIN HIDDEN FIELDS AREA -->
    @Html.HiddenFor(m => m.EventCommand)
    @Html.HiddenFor(m => m.Mode)
    @Html.HiddenFor(m => m.EventArgument)
    <!-- END HIDDEN FIELDS AREA -->
    <!--start Loading panel-->
    <div id="loading" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class=" modal-title">Loading... </h4>
                </div>
                <div class=" modal-body">
                    <div class=" progress progress-striped active">
                        <div class="progress-bar" style="width:100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--start Loading panel-->
    <div class="content-wrapper">
        <section class="content">
            <!-- ** BEGIN MESSAGE AREA -->
           
            <!-- ** END MESSAGE AREA -->
            <!-- add new comment to index file -->
            @if (Model.IsSearchAreaVisible)
            {
                <!-- ** BEGIN SEARCH AREA ** -->
                <br />
                <div class="panel panel-primary">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="form-group">
                                @Html.LabelFor(m => m.startDate, "Start Date", new { @class = "col-md-4 control-label" })
                                <div class="col-md-4 inputGroupContainer">
                                    @Html.TextBoxFor(m => m.startDate, new { @class = "form-control", @type = "date" })
                                </div>
                            </div><br />
                            <br />
                            <div class="form-group">
                                @Html.LabelFor(m => m.endDate, "End Date", new { @class = "col-md-4 control-label" })
                                <div class="col-md-4 inputGroupContainer">
                                    @Html.TextBoxFor(m => m.endDate, new { @class = "form-control", @type = "date" })
                                </div>
                            </div>
                            <br /><br />
                            <button id="btnSearch"
                                    class="btn btn-sm btn-primary"
                                    data-pdsa-action="search">
                                <i class="glyphicon glyphicon-search"></i>
                                &nbsp;Search
                            </button>&nbsp;&nbsp;
                            <button id="btnReset"
                                    class="btn btn-sm btn-primary"
                                    data-pdsa-action="resetsearch">
                                <i class="glyphicon glyphicon-share-alt"></i>
                                &nbsp;Reset
                            </button>
                        </div>
                    </div>

                </div>
                <!-- ** END SEARCH AREA ** -->
            }

            @if (Model.IsListAreaVisible)
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-body">
                                <h4 class="m-b-30 m-t-0">Audit Trail Details</h4>

                                <table id="viewAuditLogs" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>                                            
                                            <th>ID</th>
                                            <th>User Id</th>
                                            <th>Activity</th>
                                            <th>Date</th>
                                            <th>IP Address</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.AuditLogs)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.UserId</td>
                                                <td>@item.ActivityPerformed</td>
                                                <td>@item.DateOfActivity</td>
                                                <td>@item.IpAddress</td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                @if (Model.PagedList != null)
                                {
                                    @Html.PagedListPager(Model.PagedList, page => Url.Action("ViewLogs", new { page }))
                                }

                            </div>
                        </div>
                    </div>
                </div>

                <!-- END GRID AREA -->
            }
        </section>
    </div>

}

