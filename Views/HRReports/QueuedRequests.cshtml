            @if (Model.IsListAreaVisible)
            {
                <br />
                <br />

                <h4><span style="color: whitesmoke">Queued Requests Details</span></h4>
                <!-- BEGIN GRID AREA -->
                <br />
                <br />
                <br />
                <div class="table-responsive">
                    <table id="queuedRecords" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Queue No</th>
                                <th>Reference Number</th>
                                <th>StaffID</th>
                                <th>Facility Type</th>
                                <th>Staff Name</th>                               
                                <th>Department Name</th>                               
                                <th>Request Date</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                int no = 0;
                            }
                            @foreach (var item in Model.queuedReqs)
                            {
                                <tr>
                                    <td>@{ no++;}@no</td>
                                    <td><b><span style="color: darkgoldenrod">@item.requestReferenceNumber</span></b></td>
                                    <td>@item.staffId</td>
                                    <td>@item.facilityName</td>
                                    <td><b><span style="color: forestgreen">@item.accountName</span></b></td>                                    
                                    <td>@item.department</td>                                    
                                    <td>@item.requestDate</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.PagedList != null)
                    {
                        @Html.PagedListPager(Model.PagedList, page => Url.Action("QueuedRequests", new { page }))
                    }

                </div>

                <!-- END GRID AREA -->
